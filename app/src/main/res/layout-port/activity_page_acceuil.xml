<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_page_accueil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/beige"
    tools:context="org.esiea.costa_raguideau.projetmobile_costa_raguideau.PageAccueil">

    <Button
        android:text="Signification du sens de la vie"
        android:id="@+id/BoutonVie"
        android:layout_height="60dp"
        android:layout_width="300dp"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="@android:color/holo_red_dark"
        android:textStyle="normal|bold|italic"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="video"/>

    <Button
        android:text="Change Activity"
        android:layout_height="80dp"
        android:layout_width="140dp"
        android:layout_marginBottom="31dp"
        android:id="@+id/Next"
        android:layout_above="@+id/BoutonVie"
        android:layout_alignLeft="@+id/BoutonVie"
        android:layout_alignStart="@+id/BoutonVie"
        android:onClick="petite_soif"/>

    <Button
        android:text="Que pensez vous de notre application ?"
        android:id="@+id/Avis"
        android:layout_height="80dp"
        android:layout_width="140dp"
        android:layout_alignRight="@+id/BoutonVie"
        android:layout_alignEnd="@+id/BoutonVie"
        android:layout_alignTop="@id/Next"
        android:onClick="arrogant"/>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        app:srcCompat="@drawable/oraoraora"
        android:id="@+id/Ora"
        android:cropToPadding="false"
        android:layout_above="@+id/Next"
        android:layout_alignLeft="@+id/Next"
        android:layout_alignStart="@+id/Next" />

    <TextView
        android:text="put some text here"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Intro"
        tools:text="Les crÃ©ateurs de cette application vous recommendent de regarder Jojo's bizarre Adventure! Ora ora ora oraaaa!!!"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:fontFamily="casual"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Ora"
        android:layout_alignStart="@+id/Ora"
        android:layout_marginTop="16dp" />

</RelativeLayout>
